{% extends 'base.html.twig' %}

{% block title %}
  {{ page.title }}
{% endblock %}

{% block body %}
  <body>
  {% include ('header.html.twig') %}

  <div class="container-fluid p-0 mb-5">
    {% if page.cover %}
        <div class="d-flex justify-content-center align-items-center"
             style="height: 480px;
                    background-image: url('page/images/{{ page.cover }}');
                    background-position: center center">
          <h1 class="text-light display-4 text-uppercase"><strong>{{ page.title }}</strong></h1>
        </div>
    {% endif %}

  </div>
  <div class="container-lg py-5">
    {{ page.body | raw }}
  </div>

  {% include ('footer.html.twig') %}
  </body>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}
  {{ page.title }}
{% endblock %}

{% block body %}

  <div class="container-fluid p-0 bg-white">
    {% if page.cover %}
    <div class="d-flex justify-content-center align-items-center"
         style="background-image: url('page/images/{{ page.cover }}'); height: 500px; background-position-y: center">

        <div class="h-25" >
          <h1 class="text-light display-2">{{ page.title }} </h1>
        </div>

    </div>
    {% endif %}

    <div class="container bg-body mt-3 fs-3">
      {{ page.body | raw }}
    </div>
  </div>

{% endblock %}